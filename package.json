{
  "name": "ts-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for typescript projects powered by eslint and prettier",
  "main": "index.js",
  "scripts": {
    "start": "yarn build && env NODE_ENV=dev node dist/index",
    "start:db": "yarn build:db && sudo docker run -p 3306:3306 --name harrison-mysql -e MYSQL_ROOT_PASSWORD=harrison harrison-mysql",
    "build": "tsc",
    "build:db": "sudo docker build -t harrison-mysql .",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "migrate:db": "",
    "test": "jest",
    "codecov": "codecov"
  },
  "author": "Silver Xu",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/mysql2": "types/mysql2",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "ts-jest": "^25.1.0",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "mysql2": "^2.1.0"
  }
}
